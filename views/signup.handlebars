<div class="container">
  <div class="jumbotron text-center">
    <h1>Sign up</h1>
    <div class="container" id="form-container">
        <form action="/signup" method="POST">
          <div class="row">
            <div class="form-group col-xs-12 col-sm-6 col-md-8 col-md-offset-2">
              <input type="text" class="form-control" id="firstname-input" placeholder="First Name" name="firstName" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-8 col-md-offset-2">
              <input type="text" class="form-control" id="lastname-input" placeholder="Last Name" name="lastName" required>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-12 col-sm-6 col-md-4 col-md-offset-2">
              <input type="email" class="form-control" id="email-input" placeholder="Email" name="email" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-4">
              <input type="text" class="form-control" id="username-input" placeholder="Username" name="username" required>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-12 col-sm-6 col-md-4 col-md-offset-2">
              <input type="password" class="form-control" id="password-input" placeholder="Password" name="password" required>
            </div>
            <div class="form-group col-xs-12 col-sm-6 col-md-4">
              <input type="password" class="form-control" id="password-input" placeholder="Confirm Password" name="confirmPassword" required>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-12 col-sm-6 col-sm-offset-3">
              <input type="date" class="form-control" id="dob-input" name="dob" required>
            </div>
          </div>
          <div class="row">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </form>
    </div>
  </div>
</div>